
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFFFF" >
        
        <Button 
            android:id="@+id/mainRuntime"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:text="Run Time"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/entry_page_buttons"/>
        <Button 
            android:id="@+id/designer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="1000dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="Restaurant Designer"
            android:background="@drawable/entry_page_buttons"/>
        <Button 
            android:id="@+id/promotionDesigner"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="500dp"
            android:text="Promotion Designer"
            android:textColor="#000000"
            android:textSize="30sp"
            android:background="#11AAAAAA"/>
        <Button 
            android:id="@+id/statistics"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="1000dp"
            android:layout_marginTop="500dp"
            android:text="Statistics"
            android:textColor="#000000"
            android:textSize="30sp"
            android:background="#11AAAAAA"/>

    </RelativeLayout>
