<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/designBar"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/blueprint_list_buttons">
    
    <View
    android:id="@+id/designBarRect"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/standard_table_large"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    />
    <View
    android:id="@+id/designBarCirc"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/standard_circle_big"
    android:layout_below="@+id/designBarRect"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    />
     <View
    android:id="@+id/designBarBooth"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/booth_big"
    android:layout_below="@+id/designBarCirc"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    />
      <View
    android:id="@+id/designBarWallHorizontal"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/horizontal_wall_plain"
    android:layout_below="@+id/designBarBooth"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    />
       <View
    android:id="@+id/designBarWallVertical"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/wall_vertical_plain"
    android:layout_below="@+id/designBarBooth"
    android:layout_toRightOf="@+id/designBarWallHorizontal"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    />
        <View
    android:id="@+id/designBarObject"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@drawable/restaurant_object_big"
    android:layout_below="@+id/designBarWallHorizontal"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    />
    
    
    
</RelativeLayout>